<% page.posts.forEach(function(post) { %>
  <div class="p-8 border-b border-gray-200 dark:border-gray-700 flex relative overflow-hidden flex-col md:flex-row animated fadeIn">
    
    <div class="flex-1 order-2 md:order-1 w-full">
      <h2 class="text-2xl font-semibold mb-4">
        <% if (post.top) { %>
          <i class="ri-star-fill text-orange-200 text-2xl mr-1 rotate-90"></i>
        <% } %>
        <a href="<%= url_for(post.path) %>" class="text-gray-700 dark:text-gray-200 border-b-2 border-dotted border-gray-200 dark:border-gray-400 dark:hover:border-gray-200 hover:border-gray-600 transition-all duration-100">
          <%= post.title %>
        </a>
      </h2>
      <div class="mb-4 text-xs text-gray-500"><%= date(post.date) %></div>
      <div class="mb-4 text-gray-500 dark:text-gray-300">
        <% if (post.description && theme.excerpt_description) { %>
          <%- post.description %>
        <% } else if (post.excerpt) { %>
          <%- post.excerpt %>
        <% } else { %>
          <%- post.content %>
        <% } %>
      </div>
      <a href="<%= url_for(post.path) %>#more" class="btn">
        <%= theme.paperwork.readMore || '阅读更多' %>
      </a>
    </div>
    <% if (post.cover) { %>
      <img class="flex-shrink-0 self-start md:ml-4 mb-4 md:mb-0 rounded-sm object-cover featured-img order-1 md:order-2 w-full h-40 md:w-56 md:h-32" loading="lazy" src="<%= post.cover %>" alt="<%= post.title %>">
    <% } %>
  </div>
<% }); %>